{
  "name": "donexus-backend",
  "version": "0.1.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node --loader ts-node/esm index.js",
    "test": "echo \"No tests yet\"",
    "seed": "node db/seed.js",
    "seed:docker": "sleep 10 && node db/seed.js",
    "seed:typeorm": "node --experimental-specifier-resolution=node --loader ts-node/esm db/seed-typeorm.js",
    "seed:typeorm:docker": "sleep 10 && node --experimental-specifier-resolution=node --loader ts-node/esm db/seed-typeorm.js",
    "migrate": "node --experimental-specifier-resolution=node --loader ts-node/esm migrations/run-migrations.js",
    "migrate:docker": "sleep 10 && node --experimental-specifier-resolution=node --loader ts-node/esm migrations/run-migrations.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "typeorm": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
